{% extends "themes/base_admin.html.twig" %}

{% block title %}- Modifier la catégorie numéro : {{ category.id }}{% endblock %}

{% block description %}Modifier la catégorie{% endblock %}

{% block main %}
    <h1 class="text-center my-3 display-5">Modifier la catégorie : {{ category.name }}</h1>

    <div class="container mt-5">
        {{ form_start(form) }}
            <div class="mb-3">
                <label for="category_form_name">Nom</label>
                <div class="text-danger">{{ form_errors(form.name) }}</div>
                {{ form_widget(form.name, {'attr': {'class': "form-control"}  }) }}
            </div>
            <div class="mb-3">
                <input type="submit" class="btn btn-primary" value="Modifier" formnovalidate>
            </div>
        {{ form_end(form) }}
    </div>
{% endblock %}