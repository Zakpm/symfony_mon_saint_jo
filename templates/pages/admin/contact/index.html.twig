{% extends "themes/base_admin.html.twig" %}

{% block title %}- Liste des contacts{% endblock %}

{% block description %}Liste des contact{% endblock %}

{% block jquery %}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.3/jquery.min.js" integrity="sha512-STof4xm1wgkfm7heWqFJVn58Hm3EtS31XFaagaa8VMReCXAkQnJZ+jEy8PCC/iT18dFy95WcExNHFTqLyp72eQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
{% endblock %}

{% block datatables %}
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/bs5/dt-1.13.1/datatables.min.css"/>
    <script type="text/javascript" src="https://cdn.datatables.net/v/bs5/dt-1.13.1/datatables.min.js"></script>
    <script>
        $(document).ready(function() {
            $('#table').DataTable( {
                language: {
                    url: 'https://cdn.datatables.net/plug-ins/1.13.1/i18n/fr-FR.json'
                }
            } );
        } );
    </script>
{% endblock %}

{% block main %}
    <h1 class="text-center my-3 display-5">Liste des contacts</h1>

    {% for message in app.flashes('success') %}
        <div class=" text-center alert alert-success alert-dismissible fade show" role="alert">
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {% endfor %}

    <div class="table-responsive">
        <table id="table" class="table table-striped table-hover text-center">
            <thead class="bg-dark text-white">
                <tr>
                    <th>Prénom</th>
                    <th>Nom</th>
                    <th>Email</th>
                    <th>Téléphone</th>
                    <th>Message</th>
                    <th>Options</th>
                </tr>
            </thead>
            <tbody>
                {% for contact in contacts %}
                    <tr>
                        <td>{{ contact.firstName }}</td>
                        <td>{{ contact.lastName }}</td>
                        <td>{{ contact.email }}</td>
                        <td>{{ contact.telephone }}</td>
                        <td>
                            <a href="{{ path('admin.contact.show', {'id' : contact.id}) }}" title="Lire l'article" class="text-dark"><i class="fa-solid fa-eye"></i></a>
                        </td>
                        <td>
                            <a onclick="event.preventDefault(); confirm('Confirmer la suppression ?') && document.querySelector('.delete_contact_{{ contact.id }}').submit()"  class="text-danger m-2" href="" title="Supprimer"><i class="fa-solid fa-trash-can"></i></a>
                            
                            <form class="delete_contact_{{ contact.id }}" action="{{ path('admin.contact.delete', {'id' : contact.id}) }}" method="POST" class="d-none">
                                <input type="hidden" name="_csrf_token" value="{{ csrf_token('contact_' ~ contact.id ) }}" />
                            </form>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}