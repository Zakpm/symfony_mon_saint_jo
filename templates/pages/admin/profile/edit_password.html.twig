{% extends "themes/base_admin.html.twig" %}

{% block title %}- Modifier le mot de passe{% endblock %}

{% block description %}Modifier le mot de passe{% endblock %}

{% block main %}
    <h1 class="text-center my-3 display-5">Modifier le mot de passe</h1>

    <div class="container mt-5">
        <div class="row">
            <div class="col-md-8 col-lg-6 mx-auto bg-white shadow rounded p-4">
                {{ form_start(form) }}
                <div class="row">
                    <div class="col-12 mb-3">
                        <label for="change_password_form_currentPassword">Mot de passe actuel</label>
                        <div class="text-danger">{{ form_errors(form.currentPassword) }}</div>
                        {{form_widget(form.currentPassword, {'attr' : {'class': 'form-control'}} )}}
                    </div>
                </div>
                <div class="row">
                    <div class="col-12 mb-3">
                        <label for="change_password_form_plainPassword_first">Nouveau mot de passe</label>
                        <div class="text-danger">{{ form_errors(form.plainPassword.first) }}</div>
                        {{form_widget(form.plainPassword.first, {'attr' : {'class': 'form-control'}} )}}
                    </div>
                </div>

                <div class="row">
                    <div class="col-12 mb-3">
                        <label for="change_password_form_plainPassword_second">Confirmation du nouveau mot de passe</label>
                        <div class="text-danger">{{ form_errors(form.plainPassword.second) }}</div>
                        {{form_widget(form.plainPassword.second, {'attr' : {'class': 'form-control'}} )}}
                    </div>
                </div>

                <div class="row">
                    <div class="col-12 mb-3">
                        <input type="submit" class="btn btn-primary" formnovalidate/>
                    </div>
                </div>
                {{ form_end(form) }}
            </div>    
        </div>
    </div>
{% endblock %}