{% set uri_url = app.request.getPathInfo() %}

<nav class="navbar navbar-expand-lg msj-bg-dark navbar-dark shadow sticky-top">
    <div class="container-fluid">
       <a href="{{ path('visitor.welcome.index') }}">
           <img class="navbar-brand" src="{{ asset('images/logo_monsaintjo.png') }}" alt="Le logo du site MonSaintJo">  
       </a> 
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link {{ (uri_url == path('visitor.welcome.index')) ? 'active' : '' }}" aria-current="page" href="{{ path('visitor.welcome.index') }}">Accueil</a>
          </li>
          <li class="nav-item">
            <a class="nav-link {{ (uri_url == path('visitor.blog.index')) ? 'active' : '' }}" aria-current="page" href="{{ path('visitor.blog.index') }}">Articles</a>
          </li>
          <li class="nav-item">
            <a class="nav-link {{ (uri_url == path('visitor.about_me.index')) ? 'active' : '' }}" aria-current="page" href="{{ path('visitor.about_me.index') }}">Qui sommes-nous ?</a>
          </li>
          <li class="nav-item">
            <a class="nav-link {{ (uri_url == path('visitor.contact.create')) ? 'active' : '' }}" aria-current="page" href="{{ path('visitor.contact.create') }}">Contact</a>
          </li>
        </ul>

        <ul class="navbar-nav ms-auto">
          {% if app.user %}
              {% if is_granted('ROLE_SUPER_ADMIN') %}
                  <li class="nav-item">
                    <a class="nav-link {{ (uri_url == path('admin.home.index')) ? 'active' : '' }}" aria-current="page" href="{{ path('admin.home.index') }}">Espace admin</a>
                  </li>
              {% elseif is_granted('ROLE_ADMIN') %}
                  <li class="nav-item">
                    <a class="nav-link {{ (uri_url == path('admin.home.index')) ? 'active' : '' }}" aria-current="page" href="{{ path('admin.home.index') }}">Espace admin</a>
                  </li>
              {% elseif is_granted('ROLE_USER') %}
                  <li class="nav-item">
                    <a class="nav-link {{ (uri_url == path('user.home.index')) ? 'active' : '' }}" aria-current="page" href="{{ path('user.home.index') }}">Espace privé</a>
                  </li>
              {% endif %}
              <li class="nav-item">
                <a class="nav-link {{ (uri_url == path('app.logout')) ? 'active' : '' }}" href="{{ path('app.logout') }}">Déconnexion</a>
              </li>
          {% else %}
                <li class="nav-item">
                  <a class="nav-link {{ (uri_url == path('visitor.authentication.login')) ? 'active' : '' }}" href="{{ path('visitor.authentication.login') }}">Connexion</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link {{ (uri_url == path('visitor.registration.register')) ? 'active' : '' }}" href="{{ path('visitor.registration.register') }}">Inscription</a>
                </li>
          {% endif %}
        </ul>

      </div>
    </div>
</nav>